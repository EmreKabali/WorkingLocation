@model Entity.DTO.ViewModels.AddDepartmentViewModel
@{
    ViewData["Title"] = "Department Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    @await Html.PartialAsync("_NotificationPartial")
}



<div class="card">
    <div class="card-header">
        <h4>Department Master</h4>
    </div>
    <div class="card-body">

        <form method="post" asp-controller="Admin" asp-action="Department">
            <div class="form-group row">
                <div class="col-md-4">
                    <label for="exampleInputEmail1">Name</label>
                    <input type="text" asp-for="Name" class="form-control" id="exampleInputEmail1" aria-describedby="name" value="@Model.Name" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label for="exampleInputEmail1">Description</label>
                    <input type="text" asp-for="Description" class="form-control" id="exampleInputEmail1" aria-describedby="Description" value="@Model.Description" placeholder="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
               

            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

