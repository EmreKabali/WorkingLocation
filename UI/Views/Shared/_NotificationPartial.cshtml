<script type="text/javascript">

    @{
            if (ViewData["NotificationType"] != null)
            {

                if (ViewData["NotificationType"].ToString() == "Success")
                {
                   
                 <text> toastr.success("@ViewData["NotificationContent"]");</text>

                }else if (ViewData["NotificationType"].ToString() == "Information")
                {

                <text> toastr.info("@ViewData["NotificationContent"]");</text>
                }else if (ViewData["NotificationType"].ToString() == "Warning")
                {

                <text> toastr.warning("@ViewData["NotificationContent"]");</text>
                }else if (ViewData["NotificationType"].ToString() == "Error")
                {
                   <text> toastr.error("@ViewData["NotificationContent"]");</text>
                }




            }


    }

</script>